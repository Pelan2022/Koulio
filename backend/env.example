# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://koulio_user:your_secure_password_here@postgres:5432/koulio_db?sslmode=require
DB_HOST=postgres
DB_PORT=5432
DB_NAME=koulio_db
DB_USER=koulio_user
DB_PASSWORD=your_secure_password_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_very_long_and_secure_at_least_32_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=12
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=1

# HTTPS Configuration (for production)
HTTPS_ENABLED=true
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://unrollit.aici.cz,http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# CapRover Configuration
CAPROVER_APP_NAME=koulio-backend
CAPROVER_DOMAIN=unrollit.aici.cz

# Frontend URL
FRONTEND_URL=https://unrollit.aici.cz

# Backup Configuration
BACKUP_DIR=/app/backups
BACKUP_RETENTION_DAYS=30

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info

# Security Configuration
ALLOWED_IPS=127.0.0.1,::1
