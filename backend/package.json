{
  "name": "koulio-backend",
  "version": "1.0.0",
  "description": "KOULIO Backend API with PostgreSQL and JWT authentication",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/ scripts/ --ext .js",
    "lint:fix": "eslint src/ scripts/ --ext .js --fix",
    "format": "prettier --write src/ scripts/",
    "format:check": "prettier --check src/ scripts/",
    "security:check": "npm audit --audit-level moderate",
    "migrate": "node src/database/migrate.js",
    "seed": "node src/database/seed.js",
    "backup": "node scripts/backup.js",
    "backup:cron": "node scripts/backup-cron.js",
    "logs": "tail -f logs/combined-$(date +%Y-%m-%d).log",
    "logs:error": "tail -f logs/error-$(date +%Y-%m-%d).log",
    "cleanup:temp": "node -e \"require('./src/services/exportService').cleanupTempFiles()\"",
    "cleanup:logs": "find logs/ -name '*.log' -mtime +30 -delete",
    "cleanup:all": "npm run cleanup:temp && npm run cleanup:logs"
  },
  "keywords": ["koulio", "api", "postgresql", "jwt", "authentication"],
  "author": "KOULIO Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "bcryptjs": "^2.4.3",
    "argon2": "^0.31.2",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "rate-limit-redis": "^4.2.0",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-async-errors": "^3.1.1",
    "@sentry/node": "^7.77.0",
    "nodemailer": "^6.9.7",
    "redis": "^4.6.10",
    "csv-writer": "^1.6.0",
    "pdfkit": "^0.13.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
